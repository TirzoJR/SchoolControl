<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>School Control Teachers</title>
    
    <!-- Bootstrap CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
        crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/material-icons@1.13.14/iconfont/material-icons.min.css">
</head>
<body>
    <div class="container mt-4">
        <!-- NavBar -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">School Control</a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a
                                class="nav-link dropdown-toggle"
                                href="#"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                            >
                                Dropdown
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                        </li>
                    </ul>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>

        <div class="row">
            <!-- Formulario -->
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/api/teachers/insertOne" method="post">
                            <div class="row g-3">
                                <div class="col-lg-6">
                                    <label for="txtTeacherId" class="form-label">Número de control</label>
                                    <input type="text" class="form-control" id="txtTeacherId" name="teacher_id" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtName" class="form-label">Nombre</label>
                                    <input type="text" class="form-control" id="txtName" name="name" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtFirstLastName" class="form-label">Apellidos</label>
                                    <input type="text" class="form-control" id="txtLastname" name="lastname" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtAge" class="form-label">Edad</label>
                                    <input type="text" class="form-control" id="txtAge" name="age" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtEmail" class="form-label">Email</label>
                                    <input type="text" class="form-control" id="txtEmail" name="email" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtArea" class="form-label">Area</label>
                                    <input type="text" class="form-control" id="txtArea" name="area" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtSalary" class="form-label">Salary</label>
                                    <input type="text" class="form-control" id="txtSalary" name="salary" />
                                </div>
                                <div class="col-lg-6">
                                    <label for="txtYearsofservice" class="form-label">Años de servicio</label>
                                    <input type="text" class="form-control" id="txtYearsofservice" name="years_of_service" />
                                </div>
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Tabla -->
            <div class="col-lg-7">
                <h2>Tabla de Teachers</h2>
                <!-- Aquí iría tu tabla -->
                <div class="table-responsive">
                    <table class="table table-primary table-striped">
                        <thead>
                            <tr>
                                <th>Número de control</th>
                                <th>Nombre</th>
                                <th>Apellidos</th>
                                <th>Edad</th>
                                <th>Email</th>
                                <th>Area</th>
                                <th>Salary</th>
                                <th>Años de servicio</th>


                                <th colspan="2">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% teachers.forEach(function(student) { %>
                                <tr>
                                    <td><%= teacher.teacher_id %></td>
                                    <td><%= teacher.name %></td>
                                    <td><%= teacher.lastname %></td>
                                    <td><%= teacher.age %></td>
                                    <td><%= teacher.email %></td>
                                    <td><%= teacher.area %></td>
                                    <td><%= teacher.salary %></td>
                                    <td><%= teacher.years_of_service %></td>
                                    <td>
                                        <a href="/api/teachers/getOne/<%= teachers.teachers_id %>" class="btn btn-primary"> <i class="material-icons"> edit </i> </a>
                                    </td>
                                    <td>
                                        <a href="/api/teachers/deleteOne/<%= teachers.teachers_id %>" class="btn btn-danger btn-sm"><i class="material-icons">delete</i></a>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"
    ></script>
    
</body>
</html>